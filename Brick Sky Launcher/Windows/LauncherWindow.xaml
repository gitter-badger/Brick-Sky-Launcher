<controls:MetroWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    x:Class="BrickSkyLauncher.Windows.LauncherWindow"
    Title="{DynamicResource Window_Title}"
    Height="350"
    Width="525"

    BorderThickness="0"
    GlowBrush="Black"

    WindowStartupLocation="CenterScreen" x:ClassModifier="internal">

    <controls:MetroWindow.Resources>
        <System:String x:Key="Window_Title">Block Sky Launcher</System:String>
        <System:String x:Key="WindowCommands_ReportBug">Fehler melden!</System:String>
    </controls:MetroWindow.Resources>

    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <Button Content="{DynamicResource WindowCommands_ReportBug}" Click="ReportBug" />
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>


    <Grid />
</controls:MetroWindow>